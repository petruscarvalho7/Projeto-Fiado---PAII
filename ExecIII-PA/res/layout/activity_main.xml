<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

     <ImageButton
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/rgColors"
         android:layout_alignTop="@+id/imageView2"
         android:layout_marginLeft="25dp"
         android:contentDescription="@string/btImage1"
         android:src="@android:drawable/btn_dialog" />

     <ImageButton
         android:id="@+id/imageView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_alignRight="@+id/rgColors"
         android:layout_marginRight="27dp"
         android:layout_marginTop="62dp"
         android:contentDescription="@string/btImage2"
         android:src="@android:drawable/btn_dialog" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/imageView1"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/imageView2"
         android:layout_below="@+id/rgColors"
         android:layout_marginTop="64dp"
         android:text="@string/txView" />

     <RadioGroup
         android:id="@+id/rgColors"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/imageView1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="62dp"
         android:orientation="horizontal" >

         <RadioButton
             android:id="@+id/btRadioRed"
             android:checked="true"
             android:text="@string/btRadioRed" />

         <RadioButton
             android:id="@+id/btRadioBlue"
             android:text="@string/btRadioBlue" />

         <RadioButton
             android:id="@+id/btRadioYellow"
             android:text="@string/btRadioYellow" />
     </RadioGroup>

</RelativeLayout>