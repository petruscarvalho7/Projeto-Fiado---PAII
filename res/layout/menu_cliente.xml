<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <QuickContactBadge
        android:id="@+id/fotoContatoTelaCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/nomeUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/nomeUsuario" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:gravity="center"
            android:text="@string/menuCliente" />

        <Button
            android:id="@+id/btNovoCadastroCliente"
            android:layout_width="@dimen/largura_bt_menus"
            android:layout_height="@dimen/altura_bt_menus"
            android:layout_marginTop="10dip"
            android:text="@string/btNovoCadastroCliente"
            android:background="@drawable/bg_bt2"
             />

        <Button
            android:id="@+id/btBuscar"
            android:layout_width="@dimen/largura_bt_menus"
            android:layout_height="@dimen/altura_bt_menus"
            android:layout_marginTop="10dip"
            android:text="@string/btBuscar"
            android:background="@drawable/bg_bt2"
             />

        <Button
            android:id="@+id/btExcluir"
            android:layout_width="@dimen/largura_bt_menus"
            android:layout_height="@dimen/altura_bt_menus"
            android:layout_marginTop="10dip"
            android:text="@string/btExcluir"
            android:background="@drawable/bg_bt2"
             />

        <Button
            android:id="@+id/btVoltar"
            android:layout_width="@dimen/largura_bt_menus"
            android:layout_height="@dimen/altura_bt_menus"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/btVoltar"
            android:background="@drawable/bg_bt1"
             />
    </LinearLayout>

</LinearLayout>