<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B8B83"
    android:orientation="vertical" >

     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:text="@string/selecionarProduto"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbNome"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="@string/lbNome" />

        <EditText
            android:id="@+id/campoNome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text" />

        <TextView
            android:id="@+id/lbCodigo"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/lbCodigo" />

        <EditText
            android:id="@+id/campoCodigo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text" />

        <TextView
            android:id="@+id/lbTipo"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/lbTipo" />

        <EditText
            android:id="@+id/campoTipo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text" />

        <TextView
            android:id="@+id/lbPreco"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/lbPreco" />

        <EditText
            android:id="@+id/campoPreco"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="numberDecimal" />
        
        <CheckBox
	        android:id="@+id/ckRemover"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="17dp"
	        android:text="@string/ckRemover" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
         >
        
        <Button
            android:id="@+id/btVoltar"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:text="@string/btVoltar" />
        

        <Button
            android:id="@+id/btSalvar"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:text="@string/btSalvar" />
    </LinearLayout>

</LinearLayout>
