<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#8B8B83" >

    <QuickContactBadge
        android:id="@+id/fotoContatoTelaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left" />
    <TextView 
        android:id="@+id/nomeUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/nomeUsuario"
      />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView 
         
         	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/menuPrincipal"
        	android:gravity="center"
        	android:layout_marginBottom="20dip"
            
         />
      
        <Button
            android:id="@+id/btGerVendas"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:background="@android:color/holo_green_light"
            android:text="@string/btGerenciarVendas"
             />
        
        <Button
            android:id="@+id/btGerenciarClientes"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:background="@android:color/holo_green_light"
            android:layout_marginTop="10dip"
            android:text="@string/btGerenciarClientes" />
        
        <Button
            android:id="@+id/btGerenciarProdutos"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:background="@android:color/holo_green_light"
            android:layout_marginTop="10dip"
            android:text="@string/btGerenciarProdutos" />
        
        <Button
            android:id="@+id/btPerfil"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
            android:background="@android:color/holo_green_light"
            android:text="@string/perfil"
             />
        
        <Button
            android:id="@+id/btSair"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:background="@android:color/holo_green_light"
            android:layout_marginTop="30dip"
            android:text="@string/btSair" />
    	
    </LinearLayout>
</LinearLayout>
