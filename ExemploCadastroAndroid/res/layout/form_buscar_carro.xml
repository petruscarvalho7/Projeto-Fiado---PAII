<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:background="#ffffff">
	<TableRow>
		<TextView android:text="Nome:" android:textColor="#000000" />
		<EditText android:id="@+id/campoNome" android:width="240px" />
	</TableRow>
	<TableRow>
		<Button android:id="@+id/btBuscar" android:text="Buscar" />
	</TableRow>
	<TableRow>
		<TextView android:text="Placa:" android:textColor="#000000" />
		<EditText android:id="@+id/campoPlaca"  />
	</TableRow>
	<TableRow>
		<TextView android:text="Ano:" android:textColor="#000000" />
		<EditText android:id="@+id/campoAno"  />
	</TableRow>
	<TableRow>
		<ImageView android:id="@+id/imagem" />
	</TableRow>
</TableLayout>